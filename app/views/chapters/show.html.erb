<h1><%=@chapter.title%></h1>

<% if @chapter.sections.any? %>
  <h4>Here are the sections for this chapter:</h4>

  <ul>
    <% @chapter.sections.each do |section| %>
      <li>
        <%= link_to section.title, chapter_section_path(section) %>
      </li>

    <% end %>
  </ul>
<% else %>
  <p>There are no sections yet!</p>
<% end %>

<p><%= link_to "Edit Chapter", edit_chapter_path(@chapter) %></p>
<p><%= link_to "Delete", chapters_path,
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "New Section", new_chapter_section_path(@chapter) %></p>
<p><%= link_to "Return to chapters", chapters_path %></p>
